@model IEnumerable<Disaster_App.Models.Donation>

@{
    ViewData["Title"] = "View Donations";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #0D1B2A; /* Consistent dark blue background */
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: #0D1B2A; /* Consistent dark blue background */
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(13, 27, 42, 0.7); /* Consistent overlay */
    }

    .donations-container {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        padding: 40px 20px;
        display: flex;
        justify-content: center;
    }

    .donations-content {
        width: 100%;
        max-width: 1500px;
    }

    .donations-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .donations-title {
        color: #0d47a1;
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 0 2px 6px rgba(255, 255, 255, 0.5);
    }

    .donations-subtitle {
        color: #1565C0;
        font-size: 1.3rem;
        margin-bottom: 30px;
    }

    .header-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .action-button {
        background: linear-gradient(135deg, #1E88E5, #0D47A1);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .action-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(13, 71, 161, 0.4);
            text-decoration: none;
            color: white;
        }

        .action-button.secondary {
            background: rgba(255, 255, 255, 0.3);
            color: #0d47a1;
            border: 2px solid rgba(13, 71, 161, 0.3);
        }

            .action-button.secondary:hover {
                background: rgba(255, 255, 255, 0.5);
                color: #1565C0;
            }

    /* Stats Section */
    .stats-section {
        margin-bottom: 30px;
    }

    .table-stats {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        border: 1px solid rgba(13, 71, 161, 0.2);
        box-shadow: 0 4px 20px rgba(13, 71, 161, 0.15);
        flex-wrap: wrap;
    }

    .stats-item {
        text-align: center;
        padding: 15px 25px;
        background: rgba(21, 101, 192, 0.1);
        border-radius: 10px;
        border: 1px solid rgba(21, 101, 192, 0.2);
        min-width: 120px;
        transition: all 0.3s ease;
    }

        .stats-item:hover {
            transform: translateY(-2px);
            background: rgba(21, 101, 192, 0.2);
        }

    .stats-label {
        display: block;
        color: #1565C0;
        font-size: 0.8rem;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stats-value {
        display: block;
        color: #0D47A1;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .donations-table-container {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(13, 71, 161, 0.2);
        border: 1px solid rgba(21, 101, 192, 0.2);
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        color: #0d47a1;
        font-size: 0.95rem;
    }

        .modern-table th {
            background: #e3f2fd;
            color: #0D47A1;
            font-weight: bold;
            padding: 15px 12px;
            text-align: left;
            border-bottom: 2px solid #90caf9;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 15px 12px;
            border-bottom: 1px solid #bbdefb;
            transition: all 0.3s ease;
        }

        .modern-table tbody tr:hover {
            background: #e3f2fd;
        }

    .donation-id {
        font-weight: bold;
        color: #1976D2;
        font-family: 'Courier New', monospace;
    }

    .donor-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #bbdefb;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #90caf9;
    }

    .donor-email {
        font-size: 0.8rem;
        color: #1565C0;
        margin-top: 2px;
    }

    .resource-type {
        color: #0d47a1;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .resource-description {
        color: #1565C0;
        font-size: 0.85rem;
        line-height: 1.3;
    }

    .quantity-badge {
        background: #e3f2fd;
        border: 1px solid #90caf9;
        border-radius: 15px;
        padding: 8px 12px;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        min-width: 60px;
    }

    .quantity-number {
        color: #0D47A1;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .status-pending {
        background: #e3f2fd;
        color: #1565C0;
        border: 1px solid #90caf9;
    }

    .status-distributed {
        background: #bbdefb;
        color: #0D47A1;
        border: 1px solid #64b5f6;
    }

    .contact-phone {
        color: #1565C0;
    }

    .location-text {
        color: #0D47A1;
        font-size: 0.85rem;
        line-height: 1.3;
    }

    .action-btn {
        background: #e3f2fd;
        border: 1px solid #90caf9;
        border-radius: 6px;
        padding: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .action-btn:hover {
            background: #bbdefb;
            transform: scale(1.1);
        }

    .text-muted {
        color: #90a4ae !important;
        font-style: italic;
    }

    .no-donations {
        text-align: center;
        padding: 60px 20px;
        color: #1565C0;
    }

        .no-donations h3 {
            color: #0D47A1;
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .no-donations p {
            margin-bottom: 30px;
            font-size: 1.1rem;
        }
</style>