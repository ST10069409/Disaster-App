@{
    ViewData["Title"] = "VolunteerHome";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Volunteer Coordination Hub</h1>
        <p class="dashboard-subtitle">Empower communities through volunteer management</p>
    </div>

    <div class="buttons-grid">
        <!-- Row 1 -->
        <div class="button-row">
            <a href="@Url.Action("Volunteerss", "Home")" class="dashboard-button incident-button">
                <div class="button-content">
                    <span class="button-icon">🌟</span>
                    <span class="button-text">Join Our Team</span>
                    <span class="button-description">Register as a volunteer</span>
                </div>
            </a>

            <a href="@Url.Action("VolunteerTask", "Home")" class="dashboard-button donation-button">
                <div class="button-content">
                    <span class="button-icon">🎯</span>
                    <span class="button-text">Create Mission</span>
                    <span class="button-description">Assign volunteer tasks</span>
                </div>
            </a>
        </div>

        <!-- Row 2 -->
        <div class="button-row">
            <a href="@Url.Action("ViewVolunteerTasks", "Home")" class="dashboard-button view-donations-button">
                <div class="button-content">
                    <span class="button-icon">📋</span>
                    <span class="button-text">Active Missions</span>
                    <span class="button-description">Monitor ongoing tasks</span>
                </div>
            </a>

            <a href="@Url.Action("ViewVolunteers", "Home")" class="dashboard-button view-incidents-button">
                <div class="button-content">
                    <span class="button-icon">👥</span>
                    <span class="button-text">Volunteer Network</span>
                    <span class="button-description">View all team members</span>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f6ff;
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background: linear-gradient(180deg, #1e3a8a 0%, #3b82f6 100%);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
    }

    .dashboard-container {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .dashboard-title {
        color: #ffffff;
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 15px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .dashboard-subtitle {
        color: #e0e7ff;
        font-size: 1.3rem;
        margin: 0;
    }

    .buttons-grid {
        display: flex;
        flex-direction: column;
        gap: 50px;
        width: 100%;
        max-width: 900px;
    }

    .button-row {
        display: flex;
        gap: 50px;
        justify-content: center;
        align-items: center;
    }

    .dashboard-button {
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.4);
        text-decoration: none;
        color: white;
        transition: all 0.4s ease;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        transform: rotate(45deg);
        margin: 20px;
    }

    .button-content {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        transform: rotate(-45deg);
        width: 140px;
    }

    .button-icon {
        font-size: 2.2rem;
        margin-bottom: 8px;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }

    .button-text {
        font-size: 1.1rem;
        font-weight: bold;
        margin: 0;
        color: #ffffff;
        line-height: 1.2;
    }

    .button-description {
        font-size: 0.8rem;
        opacity: 0.9;
        margin: 0;
        color: #dbeafe;
        line-height: 1.2;
    }

    .dashboard-button:hover {
        transform: rotate(45deg) scale(1.1);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        border-color: #ffffff;
        background: rgba(255, 255, 255, 0.25);
        text-decoration: none;
    }

    /* Individual button styles with blue tones */
    .incident-button {
        border-color: #60a5fa;
        box-shadow: 0 8px 32px rgba(96, 165, 250, 0.3);
    }

        .incident-button:hover {
            border-color: #3b82f6;
            box-shadow: 0 20px 50px rgba(96, 165, 250, 0.5);
        }

    .donation-button {
        border-color: #93c5fd;
        box-shadow: 0 8px 32px rgba(147, 197, 253, 0.3);
    }

        .donation-button:hover {
            border-color: #60a5fa;
            box-shadow: 0 20px 50px rgba(147, 197, 253, 0.5);
        }

    .view-donations-button {
        border-color: #1e40af;
        box-shadow: 0 8px 32px rgba(30, 64, 175, 0.3);
    }

        .view-donations-button:hover {
            border-color: #1d4ed8;
            box-shadow: 0 20px 50px rgba(30, 64, 175, 0.5);
        }

    .view-incidents-button {
        border-color: #3b82f6;
        box-shadow: 0 8px 32px rgba(59, 130, 246, 0.3);
    }

        .view-incidents-button:hover {
            border-color: #2563eb;
            box-shadow: 0 20px 50px rgba(59, 130, 246, 0.5);
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .button-row {
            flex-direction: column;
            gap: 30px;
        }

        .dashboard-button {
            width: 180px;
            height: 180px;
            margin: 10px;
        }

        .button-content {
            width: 120px;
        }

        .dashboard-title {
            font-size: 2.2rem;
        }

        .button-text {
            font-size: 1rem;
        }

        .button-icon {
            font-size: 2rem;
        }

        .button-description {
            font-size: 0.75rem;
        }
    }

    @@media (max-width: 480px) {
        .dashboard-container {
            padding: 20px 15px;
        }

        .dashboard-title {
            font-size: 1.8rem;
        }

        .dashboard-subtitle {
            font-size: 1.1rem;
        }

        .dashboard-button {
            width: 150px;
            height: 150px;
        }

        .button-content {
            width: 100px;
        }

        .button-text {
            font-size: 0.9rem;
        }

        .button-icon {
            font-size: 1.8rem;
        }

        .button-description {
            font-size: 0.7rem;
        }

        .background-container {
            background-attachment: scroll;
        }
    }
</style>

<!-- Background Image Container -->
<div class="background-container">
    <div class="background-overlay"></div>
</div>