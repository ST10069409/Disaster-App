@{
    ViewData["Title"] = "UserHome";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #0D1B2A;
    }

    .dashboard-wrapper {
        position: relative;
        min-height: 100vh;
        padding: 30px 20px;
    }

    /* Welcome Section */
    .welcome-section {
        margin-bottom: 40px;
        padding: 30px;
        background: linear-gradient(135deg, rgba(93, 173, 226, 0.1), rgba(30, 58, 138, 0.2));
        border-radius: 20px;
        border: 1px solid rgba(93, 173, 226, 0.3);
        backdrop-filter: blur(10px);
    }

    .welcome-title {
        color: #FFFFFF;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .welcome-subtitle {
        color: #5DADE2;
        font-size: 1.2rem;
        margin: 0;
    }

    /* Stats Cards Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        padding: 25px;
        border: 1px solid rgba(93, 173, 226, 0.2);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        border-color: rgba(93, 173, 226, 0.5);
        box-shadow: 0 10px 30px rgba(93, 173, 226, 0.2);
    }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        display: block;
    }

    .stat-label {
        color: #5DADE2;
        font-size: 0.9rem;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-value {
        color: #FFFFFF;
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
    }

    /* Quick Actions Section */
    .actions-section {
        margin-bottom: 40px;
    }

    .section-header {
        color: #FFFFFF;
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 25px;
        padding-left: 10px;
        border-left: 4px solid #5DADE2;
    }

    /* Action Cards Grid - Modern Card Layout */
    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .action-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 30px;
        border: 1px solid rgba(93, 173, 226, 0.3);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        display: block;
        position: relative;
        overflow: hidden;
    }

    .action-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(93, 173, 226, 0.1), transparent);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .action-card:hover::before {
        opacity: 1;
    }

    .action-card:hover {
        transform: translateY(-8px) scale(1.02);
        border-color: rgba(93, 173, 226, 0.6);
        box-shadow: 0 15px 40px rgba(93, 173, 226, 0.3);
        text-decoration: none;
    }

    .action-card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
    }

    .action-icon {
        font-size: 2.8rem;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(93, 173, 226, 0.2);
        border-radius: 15px;
        flex-shrink: 0;
    }

    .action-title {
        color: #FFFFFF;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
        flex: 1;
    }

    .action-description {
        color: #B0C4DE;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
        padding-left: 75px;
    }

    /* Color Variants for Action Cards */
    .action-card.primary {
        border-left: 4px solid #3498DB;
    }

    .action-card.primary:hover {
        border-left-color: #2980B9;
        box-shadow: 0 15px 40px rgba(52, 152, 219, 0.3);
    }

    .action-card.success {
        border-left: 4px solid #4ECDC4;
    }

    .action-card.success:hover {
        border-left-color: #26A69A;
        box-shadow: 0 15px 40px rgba(78, 205, 196, 0.3);
    }

    .action-card.warning {
        border-left: 4px solid #FFD93D;
    }

    .action-card.warning:hover {
        border-left-color: #FFC107;
        box-shadow: 0 15px 40px rgba(255, 217, 61, 0.3);
    }

    .action-card.info {
        border-left: 4px solid #6C5CE7;
    }

    .action-card.info:hover {
        border-left-color: #5B51D5;
        box-shadow: 0 15px 40px rgba(108, 92, 231, 0.3);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .welcome-title {
            font-size: 2rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .actions-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .action-description {
            padding-left: 0;
            margin-top: 10px;
        }

        .action-card-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }

    @@media (max-width: 480px) {
        .dashboard-wrapper {
            padding: 20px 15px;
        }

        .welcome-section {
            padding: 20px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .stat-card {
            padding: 20px;
        }

        .action-card {
            padding: 20px;
        }

        .action-icon {
            font-size: 2.2rem;
            width: 50px;
            height: 50px;
        }

        .action-title {
            font-size: 1.3rem;
        }
    }
</style>

<div class="dashboard-wrapper">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h1 class="welcome-title">
            <span>👋</span>
            <span>Welcome to Your Dashboard</span>
        </h1>
        <p class="welcome-subtitle">Manage incidents, donations, and track response efforts in real-time</p>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <span class="stat-icon">🚨</span>
            <div class="stat-label">Active Incidents</div>
            <div class="stat-value">--</div>
        </div>
        <div class="stat-card">
            <span class="stat-icon">❤️</span>
            <div class="stat-label">Total Donations</div>
            <div class="stat-value">--</div>
        </div>
        <div class="stat-card">
            <span class="stat-icon">📊</span>
            <div class="stat-label">Response Rate</div>
            <div class="stat-value">--</div>
        </div>
        <div class="stat-card">
            <span class="stat-icon">⚡</span>
            <div class="stat-label">Quick Actions</div>
            <div class="stat-value">4</div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="actions-section">
        <h2 class="section-header">Quick Actions</h2>
        <div class="actions-grid">
            <a href="@Url.Action("LogIncident", "Home")" class="action-card primary">
                <div class="action-card-header">
                    <div class="action-icon">🚨</div>
                    <h3 class="action-title">Report Emergency</h3>
                </div>
                <p class="action-description">
                    Submit a new incident report to alert response teams. Provide location, description, and severity details.
                </p>
            </a>

            <a href="@Url.Action("LogDonation", "Home")" class="action-card success">
                <div class="action-card-header">
                    <div class="action-icon">❤️</div>
                    <h3 class="action-title">Make Donation</h3>
                </div>
                <p class="action-description">
                    Contribute essential resources including food, clothing, medical supplies, or other needed items.
                </p>
            </a>

            <a href="@Url.Action("ViewIncidents", "Home")" class="action-card warning">
                <div class="action-card-header">
                    <div class="action-icon">📋</div>
                    <h3 class="action-title">Monitor Incidents</h3>
                </div>
                <p class="action-description">
                    Review all active emergencies, track their status, and see response progress in real-time.
                </p>
            </a>

            <a href="@Url.Action("ViewDonations", "Home")" class="action-card info">
                <div class="action-card-header">
                    <div class="action-icon">📦</div>
                    <h3 class="action-title">Resource Inventory</h3>
                </div>
                <p class="action-description">
                    View all available donations and resources. Manage inventory and track supply status.
                </p>
            </a>
        </div>
    </div>
</div>
